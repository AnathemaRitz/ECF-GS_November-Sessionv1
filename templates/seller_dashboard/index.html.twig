{% extends 'base.html.twig' %}

{% block title %}Hello SellerDashboardController!{% endblock %}

{% block body %}

<div class="container my-5">
    <h1>Bonjour{{ app.user }}! </h1>
    <h2> Magasin {{ store }}</h2>
    <div class="row">
        <div class="col mt-3">
            <h5>Commandes</h5>
            {% if orders|length == 0 %}
                <div class="alert alert-info">
                    Aucune commande pour le moment.
                </div>
            {% else %}
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">N°</th>
                        <th scope="col">Passée le</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Date de retrait</th>
                        <th scope="col">Prix Total</th>
                        <th scope="col">Nombre de produits</th>
                        <th scope="col">Statut</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for order in orders %}
                        <tr>
                            <td>{{ order.id }}</td>
                            <td>{{ order.createdAt|date('d/m/Y') }}</td>
                            <td>{{ order.customer.lastname }}</td>
                            <td>{{ order.customer.firstname }}</td>
                            <td>{{ order.pickupDate|date('d/m/Y') }}</td>
                            <td>{{ order.total|price }}</td>
                            <td>{{ order.orderDetails|length }}</td>
                            <td>{{ include('admin/state.html.twig', { field : { 'value' : order.state } } ) }}</td>
                            <td><a href="{{ path('app_seller_order', {'id_order': order.id}) }}">Voir le détail</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    <br>
        <div>
            <h5> Tableau Récapitulatif des ventes</h5>
            <p><em>dashboard</em></p>
        </div>
    </div>
</div>


{% endblock %}
