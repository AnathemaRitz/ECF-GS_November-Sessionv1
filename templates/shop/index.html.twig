{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-flex my-4">
     <div class="row">
            <div class="col-md-1" style="padding-top: 100px">
                <ul>
                    <li class="nav-item dropdown align-content-start ">
                        <a class="nav-link text-bg-dark dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Genres
                        </a>
                        <ul class="dropdown-menu">
                            {%for genre in allGenres %}
                                <li><a class="dropdown-item" href="{{ path('app_genre', {slug : genre.slug}) }}">{{ genre.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="col-md-10">
                <h1>Shop</h1>
                <p>{{ allGames|length }} produit(s) trouv√©(s).</p>
                <div class="row" >
                        {% for game in allGames %}
                            <div class= "col-md-3 mt-4 text-center">
                                <a href ="{{path('app_game',{slug : game.slug})}}" class= "text-decoration-none">
                                    <img src="/uploads/{{game.image}}" class="game-image" alt="{{ game.name }}">
                                    <span class="d-block fw-bold ">{{game.name}}</span>
                                </a>
                                <span class="d-block">{{game.price| price }}</span>
                                <span> {%if game.stock>0 %}
                                        <span class="badge bg-success">En stock</span>
                                        {% else %}
                                        <span class="badge bg-danger">Rupture de stock</span>
                                    {% endif %}</span>
                            </div>
                    {% endfor %}
                </div>
            </div>
            </div>
        </div>

{% endblock %}